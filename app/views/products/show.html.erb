<%= render "shared/header" %> 

<div class="border">
  <section id="information">
    <div class="container">
      <h3 class="mb-3">マイページ</h3>
      <p>ここには出店者様と、現在出店登録されている商品が表示されます。 </p>
      <div class="row">
        <!-- 左側セクション -->
        <div class="col-md-6">
          <section id="shop">
            <h4 class="mb-3">出店者様情報</h4>
            <!-- 店舗情報の表 -->
            <table class="table table-hover">
              <tbody>
                <tr>
                  <th>商品名</th>
                  <td><%= @product.name%></td>
                </tr>
                <tr>
                  <th>品種</th>
                  <td><%=@product.variety %></td>
                </tr>
                <tr>
                  <th>玉数(ランク)</th>
                  <td><%=@product.rank%></td>
                </tr>
                <tr>
                  <th>商品重量</th>
                  <td><%=@product.weight %>kg</td>
                </tr>
                <tr>
                  <th>単価</th>
                  <td><%= @product.price %>円</td>
                </tr>
                <tr>
                  <th>在庫</th>
                  <td><%= @product.stock %></td>
                </tr>
                <tr>
                  <th>送料</th>
                  <td><%= @product.postage %>円</td>
                </tr>
                <tr>
                  <th>備考</th>
                  <td><%= @product.remark %></td>
                </tr>
              </tbody>
            </table>
            <!-- /店舗情報の表 -->
          </section>
          <td>
            <%= form_with model: @cart_item, url: add_item_path, method: :post, local: true do |f| %>
              <%= f.hidden_field :product_id, value: @product.id %>
                <%= f.label :数量 %>
                <%= f.number_field :quantity %>
              
              <%= f.submit "add" %>
            <% end %>
          </td>
        </div>
        <!-- /左側セクション -->
        
      </div>
    </div>
  </section>
</div>

  <%= render "shared/footer" %>