<%= render "shared/header" %>

<div class="container-fluid">
  <%= form_with model: @form, url: user_products_path, method: :post, local: true do |fb| %>
  <div class="row">
    <p class="h5 text-danger">最大５つまで同時に登録できます。<br>コメント以外を入力した行の商品だけ登録されます。(入力に不備のある商品は登録されませんのでご注意ください)</p>
  </div>
  <div class="row">
    <div class="col">
      <table class="table border_bottom">
        <thead>
          <tr>
            <th>商品名<span></span></th>
            <th>品種</th>
            <th>ランク（玉数）</th>
            <th>商品の重量(kg)</th>
            <th>送料</th>
            <th>値段</th>
            <th>コメント<span class="badge bg-secondary text-light">任意</span></th>
            <th>在庫</th>
            <th>出品の可否</th>
          </tr>
        </thead>
        <tbody class="bulk-registration-form">
          <%= fb.fields_for :products do |f| %>
            <tr class="item">
              <td>
                <%= f.label :name,"商品名",id:"date" %>
                <%= f.text_field :name, class: 'form-control' %>
              </td>
              <td>
                <%= f.label :variety,"品種",id:"date" %>
                <%= f.text_field :variety, class: 'form-control' %>
              </td>
              <td>
                <%= f.label :rank,"ランク",id:"date" %>
                <%= f.text_field :rank, class: 'form-control' %>
              </td>
              <td>
                <%= f.label :weight,"重量",id:"date" %>
                <%= f.text_field :weight, class: 'form-control' %>
              </td>
              <td>
                <%= f.label :price,"単価",id:"date" %>
                <%= f.text_field :price, class: 'form-control' %>
              </td>
              <td>
                <%= f.label :postage,"送料",id:"date" %>
                <%= f.text_field :postage, class: 'form-control' %>
              </td>
              <td>
                <%= f.label :remark,"コメント",id:"date" %>
                <%= f.text_field :remark, class: 'form-control' %>
              </td>
              <td>
                <%= f.label :stock,"在庫",id:"date" %>
                <%= f.text_field :stock, class: 'form-control' %>
              </td>
              <td class="text-center">
                <%= f.label :suspended,"出品中or停止中",id:"date" %>
                <%= f.check_box :suspended, class: 'top10 registration-checkbox' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center py-2">
        <%= fb.submit '一括登録', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<%= render "shared/footer" %>