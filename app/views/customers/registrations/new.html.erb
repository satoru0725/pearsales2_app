
<div class="container-fluid bg-secondary" style="--bs-bg-opacity: .1;">
  <div class="row text-center">
    <div class="col">
			<a href="/">
        <%= image_tag "logo.png" %>
      </a>
    </div>
	</div>
  <div class="row">
    <%= form_with model: @customer, url: customer_registration_path, class: 'registration-main', local: true do |f| %>
      <div class="col-6 bg-white mx-auto p-5 border-top">
        <div class="row text-center border-bottom">
          <p class="h4 p-3">出店者様情報入力</p>
        </div>

        <div class="row">
          <%= render 'shared/error_messages', model: f.object %>
        </div>
    
        <div class="row py-1">
          <div>
            <label class="form-text">ニックネーム</label>
            <span class="badge bg-danger text-light">必須</span>
          </div>
          <div>
            <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) タロー", maxlength:"40", autofocus: true %>
          </div>
        </div>
        <div class="row py-1">
          <div>
            <label class="form-text">メールアドレス</label>
            <span class="badge bg-danger text-light">必須</span>
          </div>
          <div>
            <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可"%>
          </div>
        </div>
        <div class="row py-1">
          <div>
            <label class="form-text">パスワード</label>
            <span class="badge bg-danger text-light">必須</span>
          </div>
          <div>
            <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
            <p class='text-danger'>※英字と数字の両方を含めて設定してください</p>
          </div>
        </div>
        <div class="row">
          <div>
            <label class="form-text">パスワード(確認)</label>
            <span class="badge bg-danger text-light">必須</span>
          </div>
          <div>
            <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
          </div>
        </div>
        
        <div class="row py-1">
          <div>
            <label class="form-text">お名前(全角)</label>
            <span class="badge bg-danger text-light">必須</span>
          </div>
          <div>
            <%= f.text_field :last_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
            <%= f.text_field :first_name, class:"input-name", id:"first-name", placeholder:"例) 陸太郎" %>
          </div>
        </div>
        <div class="row py-1">
          <div>
            <label class="form-text">お名前カナ(全角)</label>
            <span class="badge bg-danger text-light">必須</span>
          </div>
          <div>
            <%= f.text_field :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) ヤマダ" %>
            <%= f.text_field :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) リクタロウ" %>
          </div>
        </div>
      </div>
      <div class="col-6 bg-white mx-auto p-5 border-top">
        <div class="row text-center border-bottom">
          <h4>出店者様住所</h4>
        </div>

        <div class="row py-1">
          <div>
            <label class="form-text">郵便番号</label>
            <span class="badge bg-danger text-light">必須</span>
          </div>
          <div>
            <%= f.text_field :postal_code, class:"input-default", id:"postal-code", placeholder:"例）123-4567", maxlength:"8" %>
          </div>
        </div>

        <div class="row py-1">
          <div>
            <label class="form-text">都道府県</label>
            <span class="badge bg-danger text-light">必須</span>
          </div>
          <div>
            <%= f.text_field :prefecture, class:"input-default", id:"prefecture", placeholder:"例）東京都" %>
          </div>
        </div>

        <div class="row py-1">
          <div>
            <label class="form-text">市区町村</label>
            <span class="badge bg-danger text-light">必須</span>
          </div>
          <div>
            <%= f.text_field :city, class:"input-default", id:"city", placeholder:"例）渋谷区" %>
          </div>
        </div>

        <div class="row py-1">
          <div>
            <label class="form-text">町域</label>
            <span class="badge bg-danger text-light">必須</span>
          </div>
          <div>
            <%= f.text_field :town, class:"input-default", id:"town", placeholder:"例）桜丘町" %>
          </div>
        </div>

        <div class="row py-1">
          <div>
            <label class="form-text">以降の住所</label>
            <span class="badge bg-secondary text-light">任意</span>
          </div>
          <div>
            <%= f.text_field :extended_address, class:"input-default", id:"extended_address", placeholder:"例）東京都" %>
          </div>
        </div>

        <div class="row py-1">
          <div>
            <label class="form-text">電話番号</label>
            <span class="badge bg-danger text-light">必須</span>
          </div>
          <div>
            <%= f.text_field :phone_number, class:"input-default", id:"phone_number", placeholder:"例）電話番号" %>
          </div>
        </div>

        <div class="row py-1">
          <div class='form-text-wrap'>
            <label class="form-text">FAX番号</label>
            <span class="badge bg-secondary text-light">任意</span>
          </div>
          <div>
            <%= f.text_field :fax_number, class:"input-default", id:"fax_number", placeholder:"例）FAX番号" %>
          </div>
        </div>
      </div>
    
      <div class="col-6 bg-white mx-auto p-3 border-top border-bottom">
        <div class="text-center">
          <%= f.submit "会員登録" ,class:"btn btn-danger btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row text-center">
    <div class="col">
			<a href="/">
        <%= image_tag "logo.png" %>
      </a>
    </div>
	</div>
</div>