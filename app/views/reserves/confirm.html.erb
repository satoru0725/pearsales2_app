<%= render "shared/header" %>

<h1>予約フォーム</h1>

<ol class="nav">
	<li>1.予約日入力</li>
	<li class="current">2.注文内容確認</li>
	<li>3.完了</li>
</ol>

<%= render partial: "reserves/item_confirmation", collection: @cart_items, as: "cart_item"%>
<h2><%= "合計：#{@total}円" %></h2>
<dl>
	<dt>希望日</dt>
	<dd><%= @reserve.reserve_on %></dd>
	<dt>備考</dt>
	<dd><%= @reserve.remark %></dd>
	<dt>配達先</dt>
	<dt>郵便番号</dt>
	<dd><%= @address.postal_code %></dd>
</dl>

<%= form_for @reserve, method: :post, url: reserves_back_path do |f| %>
	<%= f.hidden_field :reserve_on %>
	<%= f.hidden_field :remark %>
	<%= f.hidden_field :total_price %>
	<%= f.hidden_field :address_id %>
	<%= f.submit '入力画面に戻る' %>
<% end %>

<%= form_for @reserve, method: :post, url: reserves_complete_path do |f| %>
	<%= f.hidden_field :reserve_on %>
	<%= f.hidden_field :remark %>
	<%= f.hidden_field :total_price %>
	<%= f.hidden_field :address_id %>
	<%= f.submit '送信する' %>
<% end %>

<%= render "shared/footer" %>
