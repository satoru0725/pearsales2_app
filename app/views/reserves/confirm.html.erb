<h1>予約フォーム</h1>

<ol class="nav">
	<li>1.予約日入力</li>
	<li class="current">2.注文内容確認</li>
	<li>3.完了</li>
</ol>

<dl>
	<dt>希望日</dt>
	<dd><%= @reserve.reserve_on %></dd>
	<dt>備考</dt>
	<dd><%= @reserve.remark %></dd>
</dl>

<%= form_for @reserve, method: :post, url: reserves_back_path do |form| %>
	<%= form.hidden_field :reserve_on %>
	<%= form.hidden_field :remark %>
	<%= form.submit '入力画面に戻る' %>
<% end %>

<%= form_for @reserve, method: :post, url: reserves_complete_path do |form| %>
	<%= form.hidden_field :reserve_on %>
	<%= form.hidden_field :remark %>
	<%= form.submit '送信する' %>
<% end %>
