<div class="container-fluid bg-secondary" style="--bs-bg-opacity: .1;">
  <div class="row text-center">
    <div class="col">
			<a href="/">
        <%= image_tag "logo.png" %>
      </a>
    </div>
	</div>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-6 bg-white mx-auto p-5 border-top">
        <div class="row text-center border-bottom">
          <p class="h3 p-3">ログイン画面</p>
        </div>

        <div class="row">
          <%= render 'shared/error_messages', model: f.object %>
        </div>
    
        <div class="row py-1">
          <div class="text-center">
            <label class="form-text p-3">メールアドレス</label>
          </div>
          <div class="text-center">
            <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        <div class="row py-1">
          <div class="text-center">
            <label class="form-text p-3">パスワード</label>
          </div>
          <div class="text-center">
            <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字", autocomplete: "current-password" %>
          </div>
        </div>
      </div>
    
      <div class="col-6 bg-white mx-auto p-3 border-top border-bottom">
        <div class="text-center">
          <%= f.submit "ログイン" ,class:"btn btn-success btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row text-center">
    <div class="col">
			<a href="/">
        <%= image_tag "logo.png" %>
      </a>
    </div>
	</div>
</div>

